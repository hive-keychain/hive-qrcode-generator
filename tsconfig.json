{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES6", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "ES6",
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ]
}
